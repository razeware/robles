<header id="global-header" class="global-header" role="banner">
  <div class="header-container">

    <div class="header-left">
      <div class="header-logo">
        <a href="/">
          <svg><use xlink:href="#kodeco-orange"/></svg>
        </a>
      </div>
      <div class="page-name">
        <h4>robles: preview</h4>
      </div>
    </div>

    <div class="header-center">
      <span><%= content_module.shortcode %>:&nbsp;</span><span><%= content_module.title %>.</span>
    </div>

    <div class="header-right">
      <div class="c-global-header__user-control l-margin-right-9">
        <button class="o-text-button o-button-tooltip c-global-header__search" id="sun-button">
          <i class="o-button__icon--left l-button__search-nav">
            <svg class="o-button__svg--grey-regent"><title>Light</title><use xlink:href="#split-circle"/></svg>
          </i>
          <span class="o-tooltip o-tooltip--arrow-top o-tooltip--slim l-tooltip-book-tools">Light</span>
        </button>

        <button class="o-text-button o-button-tooltip c-global-header__search" id="moon-button">
          <i class="o-button__icon--left l-button__search-nav">
            <svg class="o-button__svg--grey-regent"><title>Dark</title><use xlink:href="#moon"/></svg>
          </i>
          <span class="o-tooltip o-tooltip--arrow-top o-tooltip--slim l-tooltip-book-tools">Dark</span>
        </button>
      </div>
    </div>
  </div>
</header>
