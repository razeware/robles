<div class="c-slide" id="slide-to-snapshot">
  <h1><%= episode.title %></h1>
  <div>
    <h2>Part <%= part.ordinal %>: <%= part.title %></h2>
    <h3><%= video_course.title %></h3>
  </div>
  <div class="c-slide__logo">
    <svg class="c-slide__logo-text" viewBox="0 0 240 50"><title>raywenderlich.com</title><use xlink:href="#logo-text"/></svg>
    <svg class="c-slide__logo-mark" viewBox="0 0 50 50"><use xlink:href="#logo-mark"/></svg>
  </div>

  <div class="c-slide__domains">
    <span>&mdash;</span>
    <% video_course.domains.each do |domain| %>
      <span><%= marketing_name_for_domain(domain) %></span>
    <% end %>
  </div>

  <% if video_course.featured_banner_image_url&.first&.url.present? %>
    <figure>
      <img src="<%= video_course.featured_banner_image_url&.first&.url %>">
    </figure>
  <% end %>
</div>
