<div class="l-margin-60 l-margin-mobile-large-40 l-padding-bottom-120">

  <div class="l-book-sales-grid l-block-padding-1200">

    <div class="l-book-sales-left">
      <div class="l-book-sales-left-top">

        <div class="l-book-meta">
          <div>
            <span>Version</span>
            <span><%= video_course.version_description %></span>
          </div>
          <div>
            <span>Platform</span>
            <span><%= video_course.platform %></span>
          </div>
          <div>
            <span>Language</span>
            <span><%= video_course.language %></span>
          </div>
          <div>
            <span>Editor</span>
            <span><%= video_course.editor %></span>
          </div>
        </div>
        <div class="l-book-art">
          <div class="l-relative l-inline-block">
            <img style="width:594px" src="<%= video_course.featured_banner_image_url&.first&.url || 'https://lorempixel.com/594/768/abstract/' %>" class="c-tutorial-item__art-image--primary">
          </div>
        </div>
      </div>

      <div class="l-margin-60 l-margin-mobile-large-40 l-book-sales-copy">
        <%= video_course.description %>
      </div>

      <%= erb :'videos/_index_table_of_contents.html', locals: { video_course: video_course } %>

      <div class="l-collection-modules__pitch-cards">
        <div>
          <h2 class="l-font-36 l-font-22--mobile l-margin-60 l-margin-mobile-large-40"><span>Who is this course for</span></h2>
          <div class="c-card-pitch l-margin-18">
            <%= video_course.who_is_this_for %>
          </div>
        </div>
        <div>
          <h2 class="l-font-36 l-font-22--mobile l-margin-mobile-large-40 l-margin-60"><span>Concepts covered in this course</span></h2>
          <div class="c-item-list-icon c-item-list-icon--checkmark l-margin-18">
            <%= video_course.covered_concepts %>
          </div>
        </div>
      </div>
    </div>

    <div class="l-book-sales-right">
      <div class="l-book-sales-right--container">

        <div class="l-flex">

          <% if video_course.professional %>
            <div class="l-margin-bottom-12">
              <span class="o-badge o-badge--pro">Pro</span>
            </div>
          <% end %>
        </div>

        <h1><%= video_course.title %></h1>
        <p class="l-book-sales-right-authors l-margin-6 l-font-header l-font-18 l-font-16--mobile">
          By* <%= video_course.authors.map(&:username).to_sentence(two_words_connector: ' & ', last_word_connector: ' and ') %>
        </p>

        <p class="l-margin-36 l-font-header l-markdown-description l-collection-hero__copy-markdown l-font-16--mobile">
          <%= video_course.short_description %>
        </p>
      </div>
    </div>
  </div>
</div>
